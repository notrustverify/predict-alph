{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2022",
    "esModuleInterop": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "exclude": ["node_modules", "api"],
  "include": ["src/**/*.ts", "scripts/**/*.ts", "alephium.config.ts", "artifacts/**/*.ts"]
}
